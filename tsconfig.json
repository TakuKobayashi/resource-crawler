{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "noImplicitAny": false,
    "sourceMap": true,
    "allowJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "**/*.spec.ts",
    "node_modules",
    "dist",
    "scripts"
  ]
}